@model ProyectoSeguridadInformatica.Models.EncryptViewModel

@{
    ViewData["Title"] = "Encriptar";
}

<div class="row justify-content-center">
    <div class="col-md-8 security-card">
        <h2 class="mb-2 security-section-title">Encriptar texto con RSA</h2>
        <p class="security-section-subtitle mb-4">
            Este módulo usa <strong>RSA</strong> con relleno <strong>OAEP-SHA256</strong> para proteger el texto que escribas.
            Sirve como demostración de cifrado asimétrico: sólo quien tenga la clave privada correcta podrá descifrar el resultado.
        </p>

        <form asp-action="Encrypt" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PlainText" class="form-label"></label>
                <textarea asp-for="PlainText" class="form-control" rows="4"></textarea>
                <span asp-validation-for="PlainText" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Encriptar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.CipherText))
        {
            <hr />
            <h4>Resultado cifrado (Base64)</h4>
            <textarea class="form-control" rows="4" readonly>@Model.CipherText</textarea>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


