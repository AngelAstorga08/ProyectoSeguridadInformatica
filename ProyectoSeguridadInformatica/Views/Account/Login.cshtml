@model ProyectoSeguridadInformatica.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 security-card">
        <h2 class="mb-2 security-section-title">Iniciar sesión</h2>
        <p class="security-section-subtitle mb-4">
            Acceso protegido para poder utilizar las funcionalidades de cifrado y descifrado RSA.
            Las credenciales se almacenan usando <strong>hash BCrypt</strong> en Firebase (entorno de práctica).
        </p>

        @{
            var authMessage = TempData["ErrorMessage"] as string;
        }

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Entrar de forma segura</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


